{{#each goals as |goal|}}

  <!-- Don't uncomment yet -->

 <!-- Developers, why are we using data-id and not just id? -->
  <h1 class ="text-center" data-id="{{goal.id}}"> <small>{{goal.description}}</small></h1>
  <div class="text-center">
    {{#if goal.description}}
      <ul class="list-unstyled"><li data-id="{{goal.id}}">Category: {{goal.category}}</li>
        <li data-id="{{goal.id}}">Status: {{goal.status}}</li>
        <li>
          <button type="button" class="update" data-toggle="modal" data-target="#updategoalmodal{{goal.id}}">Update Item</button>
          <button type="button" class="remove" data-toggle="modal" data-target="#removegoalmodal{{goal.id}}">Remove Item</button>
        </li>
      </ul>
      <div class="modal fade" id="updategoalmodal{{goal.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Update Bucketlist Item</h5>
            </div>
            <div class="modal-body">
              <form class="update-goal" data-id="{{goal.id}}">
              <fieldset>
                <label for="description">Description</label>
                <input type='text' name='goal[description]' id ='updateDescription' value="{{goal.description}}">
                <label for="category">Category</label>
                <select name="goal[category]">
                  <option value="Travel">Travel</option>
                  <option value="Skill">Skill</option>
                  <option value="Fitness">Fitness</option>
                </select>
                <label for="status">Status</label>
                <select name="goal[status]">
                  <option value="Not started">Not started</option>
                  <option value="In progress">In progress</option>
                  <option value="Completed">Completed</option>
                </select>
                <input data-id="{{goal.id}}" type="submit" name="submit" value="Update List Item">
            </fieldset>
            </form>
            </div>
            <div class="modal-footer">
              <div class="passworderror"></div>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="removegoalmodal{{goal.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Are you sure you want to remove item?</h5>
            </div>
            <div class="modal-body">
              <form class="remove-goal" data-id="{{goal.id}}">
                <fieldset>
                  <div class="remove-goal-check">{{goal.description}}</div>
                  <input type="submit" name="submit" value="Remove List Item">
                </fieldset>
              </form>
            </div>
            <div class="modal-footer">
              <div class="passworderror"></div>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
          </div>
        </div>
      </div>

    {{else}}
      No description.
    {{/if}}
  </div>
{{/each}}
